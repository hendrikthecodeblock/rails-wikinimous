<div class="row d-flex justify-content-center">
<div class="col-md-4">
<%= simple_form_for(article) do |f| %>
<%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :content, :input_html => {:rows => 5, :class => "span6", "data-provide" => "markdown" } %>
<%= f.submit class: "btn btn-secondary" %>
<% end %>
<%= link_to "Back", articles_path %>
</div>

</div>
